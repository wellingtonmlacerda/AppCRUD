@model App_Teste.Models.BuscaIDDependentesTBResult

@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row mb-4 mt-5">
        <div class="col-1">
            <input asp-for="ID" class="form-control" placeholder="ID" disabled="disabled" />
            <span asp-validation-for="ID" class="text-danger"></span>
        </div>

        <div class="col-9">
            <input asp-for="Nome" class="form-control" placeholder="Nome" required />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="col-2">
            <input asp-for="DataNascimento" class="form-control" type="date" required />
            <span asp-validation-for="DataNascimento" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-4">
            @if (ViewBag.Genero == null)
            {
                <select asp-for="GeneroID" class="form-select" required asp-items="@ViewBag.Genero">
                    <option value="">Selecione...</option>
                    <option value="1">Feminino</option>
                    <option value="2">Masculino</option>
                </select>
                <span asp-validation-for="GeneroID" class="text-danger"></span>
            }
            else
            {
                <select asp-for="GeneroID" class="form-select" required asp-items="@ViewBag.Genero">
                    <option value="">Selecione...</option>
                </select>
                <span asp-validation-for="GeneroID" class="text-danger"></span>
            }
        </div>
    </div>
    <div class="row col-6 float-start">
        <div class="col float-start">
            <button type="submit" name="btnIncluir" class="btn btn-success m-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-floppy2" viewBox="0 0 16 16">
                    <path d="M1.5 0h11.586a1.5 1.5 0 0 1 1.06.44l1.415 1.414A1.5 1.5 0 0 1 16 2.914V14.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 14.5v-13A1.5 1.5 0 0 1 1.5 0M1 1.5v13a.5.5 0 0 0 .5.5H2v-4.5A1.5 1.5 0 0 1 3.5 9h9a1.5 1.5 0 0 1 1.5 1.5V15h.5a.5.5 0 0 0 .5-.5V2.914a.5.5 0 0 0-.146-.353l-1.415-1.415A.5.5 0 0 0 13.086 1H13v3.5A1.5 1.5 0 0 1 11.5 6h-7A1.5 1.5 0 0 1 3 4.5V1H1.5a.5.5 0 0 0-.5.5m9.5-.5a.5.5 0 0 0-.5.5v3a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-3a.5.5 0 0 0-.5-.5z" />
                </svg>
                Incluir
            </button>
            <button type="submit" asp-action="Delete" asp-route-id="@Model.ID" name="btnExcluir" class="btn btn-danger m-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                </svg>
                Excluir
            </button>
            <button type="submit" asp-action="Atualiza" asp-route-id="@Model.ID" name="btnAtualizar" class="btn btn-primary m-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                </svg>
                Atualizar
            </button>
        </div>
    </div>
</form>
<form asp-action="Pesquisa">
    <div class="row col-6 float-end">
        <div class="col float-end">
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="submit" name="btnPesquisar" class="btn btn-secondary col-lg-3 col-sm-6 m-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                    </svg>
                    Pesquisar
                </button>
                <input type="search" name="Nome" class="form-control m-2" id="txtBusca" placeholder="Buscar dependente..." value="@ViewBag.Nome">
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
